generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model AuthKey {
  id              String   @id @default(uuid())
  hashed_password String?
  user_id         String
  user            AuthUser @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@map("auth_key")
}

model AuthSession {
  id             String   @id @default(uuid())
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           AuthUser @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@map("auth_session")
}

model AuthUser {
  id             String        @id @default(uuid())
  time_created   DateTime      @default(now())
  time_updated   DateTime      @updatedAt
  name_first     String
  name_last      String?
  role           UserRole      @default(User)
  email          String        @unique
  email_verified Boolean       @default(false)
  auth_key       AuthKey[]
  auth_session   AuthSession[]

  @@map("auth_user")
}

enum UserRole {
  User
  Admin
}
