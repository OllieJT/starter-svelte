	"homepage": "https://github.com/OllieJT/starter-svelte/blob/main/README.md",
	"bugs": {
		"url": "https://github.com/OllieJT/starter-svelte/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/OllieJT/starter-svelte.git"
	},
	"scripts": {
		"build": "npx prisma generate && svelte-kit sync && vite build",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --output human --watch",
		"check": "svelte-check --tsconfig ./tsconfig.json --output human",
		"dev": "vite dev",
		"format": "prettier --write .",
		"lint:fix": "eslint . --fix",
		"lint:format": "prettier --check .",
		"lint:style": "eslint . --report-unused-disable-directives",
		"prepare": "husky install",
		"preview": "vite preview",
		"sync": "npx prisma generate && svelte-kit sync && prettier --write ./src/lib/validators/**/*",
		"test": "vitest",
		"ts:watch": "svelte-check --tsconfig ./tsconfig.json --output human --threshold error --watch ",
		"ts": "svelte-check --tsconfig ./tsconfig.json --output human --threshold error",
		"vercel": "npx vercel env pull .env && npx vercel env pull .env.production  --environment production"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,svelte}": [
			"prettier --plugin-search-dir  --write",
			"eslint --fix"
		],
		"*.{html,md,mdx,json,css}": "prettier --plugin-search-dir  --write"
	},
	"devDependencies": {
		"@fontsource-variable/inter": "^5.0.8",
		"@inqling/svelte-icons": "^3.4.3",
		"@lucia-auth/adapter-mysql": "^2.0.0",
		"@lucia-auth/adapter-prisma": "^3.0.1",
		"@lucia-auth/oauth": "^3.0.0",
		"@prisma/client": "^5.2.0",
		"@sveltejs/adapter-vercel": "^3.0.3",
		"@sveltejs/kit": "^1.23.0",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/forms": "^0.5.5",
		"@tailwindcss/typography": "^0.5.9",
		"@types/node": "^20.5.6",
		"@typescript-eslint/eslint-plugin": "^6.4.1",
		"@typescript-eslint/parser": "^6.4.1",
		"autoprefixer": "^10.4.15",
		"date-fns": "^2.30.0",
		"eslint": "^8.48.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"lucia": "^2.4.0",
		"postcss": "^8.4.28",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"prettier-plugin-tailwindcss": "^0.4.1",
		"prisma": "^5.2.0",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.0",
		"svelte-meta-tags": "^3.0.3",
		"svelte-preprocess": "^5.0.4",
		"sveltekit-superforms": "^1.6.1",
		"tailwind-merge": "^1.14.0",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.4.9",
		"vitest": "^0.34.3",
		"zod": "^3.22.2"
	}
}
